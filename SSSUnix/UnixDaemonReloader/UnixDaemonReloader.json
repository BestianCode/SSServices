{
	"UDR_Shell":		"/bin/sh",
	"UDR_ShellExecParam":	"-c",

	"UDR_WatchList":		[
				["/etc/rsyslog.d", "*", "killall rsyslogd"],
				["/etc", "crontab", "killall cron"],
				["/etc/default", "locale,cron,grub", "ping -c 5 ya.ru"],
				["/etc/default", "!locale,cron,grub", "ping -c 5 google.com"],
				["/etc/network", "ethtool", "/bin/ping -c 5 8.8.8.8"],
				["/etc/network", "!w*,!run", "/bin/ping -c 5 8.8.8.8"],
				["/etc/network", "w*", "/bin/ping -c 5 8.8.8.8"],
				["/etc/network", "!run", "/bin/ping -c 5 8.8.8.8"]
					],

	"Sleep_Time":		60,

	"SQLite_DB":		"./UnixDaemonReloader.sqlite",
	"LOG_File":		"./UnixDaemonReloader.log",
	"PID_File":		"./UnixDaemonReloader.pid",

	"LogLevel":		0
}
